# =============================================
# Environment Variables Example
# Copy this file to .env and update with your values
# =============================================

# Database
CONNECTIONSTRINGS__DEFAULTCONNECTION=Server=localhost\SQLEXPRESS;Database=ECommerceDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True

# JWT Secret (minimum 32 characters)
SECRETKEY=your-super-secure-jwt-secret-key-min-32-chars

# Redis
REDIS__CONNECTIONSTRING=localhost:6379

# RabbitMQ
RABBITMQ__HOST=localhost
RABBITMQ__PORT=5672
RABBITMQ__USERNAME=guest
RABBITMQ__PASSWORD=guest

# API Key (for inter-service communication)
APIKEY__APIKEY=your-secure-api-key

# SMTP (for Notification service)
SMTPSETTINGS__HOST=smtp.gmail.com
SMTPSETTINGS__PORT=587
SMTPSETTINGS__USERNAME=your-email@gmail.com
SMTPSETTINGS__PASSWORD=your-app-password
SMTPSETTINGS__FROMEMAIL=noreply@yourdomain.com
SMTPSETTINGS__FROMNAME=ECommerce Platform
SMTPSETTINGS__ENABLESSL=true

# Payment Gateways (for Payment service)
STRIPE__SECRETKEY=sk_test_your_stripe_secret_key
STRIPE__PUBLISHABLEKEY=pk_test_your_stripe_publishable_key
MERCADOPAGO__ACCESSTOKEN=your_mercadopago_access_token
MERCADOPAGO__PUBLICKEY=your_mercadopago_public_key

# Environment
ASPNETCORE_ENVIRONMENT=Development
