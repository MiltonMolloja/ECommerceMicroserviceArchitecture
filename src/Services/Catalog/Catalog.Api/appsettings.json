{
  "Jwt": {
    "SecretKey": "dev-secret-key-for-local-development-only-32chars",
    "Issuer": "ECommerceApi",
    "Audience": "ECommerceClients"
  },
  "DatabaseLogging": {
    "Enabled": true
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Catalog.Api",
        "Uri": "http://localhost:20000/hc"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=ECommerceDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;Application Name=ECommerce"
  },
  "Redis": {
    "ConnectionString": "",
    "InstanceName": "Catalog_"
  },
  "CacheSettings": {
    "CacheExpirationMinutes": 1,
    "Disabled": true
  },
  "ApiKey": {
    "EnableApiKeyValidation": false,
    "ValidApiKeys": ["dev-api-key"]
  },
  "RateLimiting": {
    "EnableRateLimiting": false,
    "Authentication": {
      "PermitLimit": 5,
      "WindowInSeconds": 60
    },
    "General": {
      "PermitLimit": 100,
      "WindowInSeconds": 60
    },
    "Read": {
      "PermitLimit": 200,
      "WindowInSeconds": 60
    },
    "Write": {
      "PermitLimit": 50,
      "WindowInSeconds": 60
    }
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Enabled": true,
    "RetryCount": 3,
    "RetryIntervalSeconds": 5,
    "PrefetchCount": 16
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*"
}
