{
  "SecretKey": "${JWT_SECRET_KEY}",
  "DatabaseLogging": {
    "Enabled": true
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Payment.Api",
        "Uri": "http://localhost:54000/hc"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "HealthCheckDatabaseConnectionString": "Data Source=healthchecks\\db"
  },
  "ConnectionStrings": {
    "DefaultConnection": "${SQL_CONNECTION_STRING}"
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}",
    "InstanceName": "Payment_"
  },
  "CacheSettings": {
    "CacheExpirationMinutes": 5,
    "Disabled": false
  },
  "ApiKey": {
    "EnableApiKeyValidation": true,
    "ValidApiKeys": [
      "${API_KEY}"
    ]
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "Authentication": {
      "PermitLimit": 5,
      "WindowInSeconds": 60
    },
    "General": {
      "PermitLimit": 100,
      "WindowInSeconds": 60
    },
    "Read": {
      "PermitLimit": 200,
      "WindowInSeconds": 60
    },
    "Write": {
      "PermitLimit": 50,
      "WindowInSeconds": 60
    }
  },
  "PaymentGateway": {
    "Provider": "MercadoPago",
    "MockSettings": {
      "SimulateDelay": false,
      "DelayMilliseconds": 0
    }
  },
  "Stripe": {
    "PublishableKey": "${STRIPE_PUBLISHABLE_KEY}",
    "SecretKey": "${STRIPE_SECRET_KEY}",
    "WebhookSecret": "${STRIPE_WEBHOOK_SECRET}"
  },
  "MercadoPago": {
    "PublicKey": "${MERCADOPAGO_PUBLIC_KEY}",
    "AccessToken": "${MERCADOPAGO_ACCESS_TOKEN}"
  },
  "ApiUrls": {
    "OrderUrl": "http://order-api:40000",
    "NotificationUrl": "http://notification-api:5080",
    "CustomerUrl": "http://customer-api:30000"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*"
}
