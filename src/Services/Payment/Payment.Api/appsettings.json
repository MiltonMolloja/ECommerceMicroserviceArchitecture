{
  "SecretKey": "dev-secret-key-for-local-development-only-32chars",
  "DatabaseLogging": {
    "Enabled": true
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Payment.Api",
        "Uri": "http://localhost:56000/hc"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "HealthCheckDatabaseConnectionString": "Data Source=healthchecks\\db"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=ECommerceDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;Application Name=ECommerce"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "Payment_"
  },
  "CacheSettings": {
    "CacheExpirationMinutes": 1,
    "Disabled": true
  },
  "ApiKey": {
    "EnableApiKeyValidation": false,
    "ValidApiKeys": [
      "dev-api-key-for-local-development"
    ]
  },
  "RateLimiting": {
    "EnableRateLimiting": false,
    "Authentication": {
      "PermitLimit": 5,
      "WindowInSeconds": 60
    },
    "General": {
      "PermitLimit": 100,
      "WindowInSeconds": 60
    },
    "Read": {
      "PermitLimit": 200,
      "WindowInSeconds": 60
    },
    "Write": {
      "PermitLimit": 50,
      "WindowInSeconds": 60
    }
  },
  "PaymentGateway": {
    "Provider": "Mock",
    "MockSettings": {
      "SimulateDelay": true,
      "DelayMilliseconds": 1500
    }
  },
  "Stripe": {
    "PublishableKey": "",
    "SecretKey": "",
    "WebhookSecret": ""
  },
  "MercadoPago": {
    "PublicKey": "",
    "AccessToken": ""
  },
  "ApiUrls": {
    "OrderUrl": "http://localhost:40000",
    "NotificationUrl": "http://localhost:5080",
    "CustomerUrl": "http://localhost:30000"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AllowedHosts": "*"
}
