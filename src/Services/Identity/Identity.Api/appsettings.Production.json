{
  "SecretKey": "${JWT_SECRET_KEY}",
  "DatabaseLogging": {
    "Enabled": false
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Identity.Api",
        "Uri": "http://localhost:10000/hc"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "HealthCheckDatabaseConnectionString": "Data Source=healthchecks\\db"
  },
  "ConnectionStrings": {
    "DefaultConnection": "${SQL_CONNECTION_STRING}"
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}",
    "InstanceName": "Identity_"
  },
  "CacheSettings": {
    "CacheExpirationMinutes": 5,
    "Disabled": false
  },
  "Email": {
    "NotificationApiUrl": "http://notification-api:5080",
    "Templates": {
      "EmailConfirmation": "email-confirmation",
      "PasswordReset": "password-reset",
      "PasswordResetConfirmation": "password-reset-confirmation",
      "PasswordChanged": "password-changed",
      "TwoFactorEnabled": "2fa-enabled",
      "TwoFactorDisabled": "2fa-disabled"
    }
  },
  "CustomerApi": {
    "BaseUrl": "http://customer-api:30000",
    "ApiKey": "${API_KEY}"
  },
  "ApiKey": {
    "EnableApiKeyValidation": true,
    "ValidApiKeys": [
      "${API_KEY}"
    ]
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "Authentication": {
      "PermitLimit": 5,
      "WindowInSeconds": 60
    },
    "General": {
      "PermitLimit": 100,
      "WindowInSeconds": 60
    },
    "Read": {
      "PermitLimit": 200,
      "WindowInSeconds": 60
    },
    "Write": {
      "PermitLimit": 50,
      "WindowInSeconds": 60
    }
  },
  "ApiUrls": {
    "CustomerUrl": "http://customer-api:30000"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
