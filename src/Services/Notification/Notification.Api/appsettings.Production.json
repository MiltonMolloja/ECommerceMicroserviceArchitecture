{
  "Jwt": {
    "SecretKey": "override-via-environment-variable"
  },
  "BaseUrl": "http://localhost:8080",
  "ApiGatewayUrl": "http://localhost:10000",
  "FrontendUrl": "http://localhost:4400",
  "NotificationApiUrl": "http://localhost:8080",
  "DatabaseLogging": {
    "Enabled": false
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Notification.Api",
        "Uri": "http://localhost:8080/hc"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "HealthCheckDatabaseConnectionString": "Data Source=healthchecks/db"
  },
  "ConnectionStrings": {
    "DefaultConnection": "override-via-environment-variable"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "Notification_"
  },
  "CacheSettings": {
    "CacheExpirationMinutes": 5,
    "Disabled": false
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "override-via-environment-variable",
    "Password": "override-via-environment-variable",
    "FromEmail": "noreply@ecommerce.com",
    "FromName": "ECommerce Platform",
    "EnableSsl": true
  },
  "ApiKey": {
    "EnableApiKeyValidation": false,
    "ValidApiKeys": [
      "override-via-environment-variable"
    ]
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "Authentication": {
      "PermitLimit": 5,
      "WindowInSeconds": 60
    },
    "General": {
      "PermitLimit": 100,
      "WindowInSeconds": 60
    },
    "Read": {
      "PermitLimit": 200,
      "WindowInSeconds": 60
    },
    "Write": {
      "PermitLimit": 50,
      "WindowInSeconds": 60
    }
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*"
}
