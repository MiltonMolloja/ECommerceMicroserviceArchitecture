{
  "SecretKey": "${JWT_SECRET_KEY}",
  "BaseUrl": "${BASE_URL}",
  "ApiGatewayUrl": "${API_GATEWAY_URL}",
  "FrontendUrl": "${FRONTEND_URL}",
  "NotificationApiUrl": "${NOTIFICATION_API_URL}",
  "DatabaseLogging": {
    "Enabled": true
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Notification.Api",
        "Uri": "http://localhost:5080/hc"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "HealthCheckDatabaseConnectionString": "Data Source=healthchecks\\db"
  },
  "ConnectionStrings": {
    "DefaultConnection": "${SQL_CONNECTION_STRING}"
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}",
    "InstanceName": "Notification_"
  },
  "CacheSettings": {
    "CacheExpirationMinutes": 5,
    "Disabled": false
  },
  "SmtpSettings": {
    "Host": "${SMTP_HOST}",
    "Port": 587,
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "FromEmail": "${SMTP_FROM_EMAIL}",
    "FromName": "ECommerce Platform",
    "EnableSsl": true
  },
  "ApiKey": {
    "EnableApiKeyValidation": true,
    "ValidApiKeys": [
      "${API_KEY}"
    ]
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "Authentication": {
      "PermitLimit": 5,
      "WindowInSeconds": 60
    },
    "General": {
      "PermitLimit": 100,
      "WindowInSeconds": 60
    },
    "Read": {
      "PermitLimit": 200,
      "WindowInSeconds": 60
    },
    "Write": {
      "PermitLimit": 50,
      "WindowInSeconds": 60
    }
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*"
}
