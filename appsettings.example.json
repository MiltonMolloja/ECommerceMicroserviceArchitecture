{
  "//": "========================================",
  "//": "Example Configuration File",
  "//": "Copy values to User Secrets or environment variables",
  "//": "DO NOT commit actual credentials to the repository",
  "//": "========================================",
  
  "SecretKey": "CHANGE-THIS-TO-A-SECURE-32-CHARACTER-KEY",
  
  "DatabaseLogging": {
    "Enabled": true
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=ECommerceDb;User Id=YOUR_USER;Password=YOUR_PASSWORD;MultipleActiveResultSets=true;TrustServerCertificate=True;Application Name=ECommerce"
  },
  
  "Redis": {
    "ConnectionString": "YOUR_REDIS_HOST:6379",
    "InstanceName": "ServiceName_"
  },
  
  "CacheSettings": {
    "CacheExpirationMinutes": 10,
    "Disabled": false
  },
  
  "ApiKey": {
    "EnableApiKeyValidation": true,
    "ApiKey": "CHANGE-THIS-TO-A-SECURE-API-KEY",
    "ValidApiKeys": [
      "CHANGE-THIS-TO-A-SECURE-API-KEY"
    ]
  },
  
  "RateLimiting": {
    "EnableRateLimiting": true,
    "Authentication": {
      "PermitLimit": 10,
      "WindowInSeconds": 60
    },
    "General": {
      "PermitLimit": 100,
      "WindowInSeconds": 60
    },
    "Read": {
      "PermitLimit": 200,
      "WindowInSeconds": 60
    },
    "Write": {
      "PermitLimit": 50,
      "WindowInSeconds": 60
    }
  },
  
  "RabbitMQ": {
    "Host": "YOUR_RABBITMQ_HOST",
    "Port": 5672,
    "Username": "YOUR_RABBITMQ_USER",
    "Password": "YOUR_RABBITMQ_PASSWORD",
    "VirtualHost": "/",
    "Enabled": true,
    "RetryCount": 3,
    "RetryIntervalSeconds": 5,
    "PrefetchCount": 16,
    "EnableDeadLetterQueue": true,
    "DeadLetterQueueSuffix": "_error",
    "DeadLetterMessageTtlHours": 168
  },
  
  "SmtpSettings": {
    "Host": "YOUR_SMTP_HOST",
    "Port": 587,
    "Username": "YOUR_SMTP_USER",
    "Password": "YOUR_SMTP_PASSWORD",
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "Your App Name",
    "EnableSsl": true
  },
  
  "Stripe": {
    "SecretKey": "sk_test_YOUR_STRIPE_SECRET_KEY",
    "PublishableKey": "pk_test_YOUR_STRIPE_PUBLISHABLE_KEY"
  },
  
  "MercadoPago": {
    "AccessToken": "YOUR_MERCADOPAGO_ACCESS_TOKEN",
    "PublicKey": "YOUR_MERCADOPAGO_PUBLIC_KEY"
  },
  
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  
  "AllowedHosts": "*"
}
